// electron-builder.json
{
  "appId": "com.patternprojector",
  "productName": "Pattern Projector",
  "npmRebuild": false,
  "buildDependenciesFromSource": false,
  "directories": {
    "output": "dist",
    "buildResources": "assets"
  },
  "files": [
    "out/**/*",
    "pp_electron.js",
    "preload.js"
  ],
  "win": {
    "target": "nsis",
    "icon": "assets/icon.ico"
  },
  "mac": {
    "target": "dmg",
    "icon": "assets/icon.icns"
  }
}
